@model IList<Vidly2.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<div>
    @if (Model != null && Model.Count != 0)
    {
        <div class="row">
            <div class="col-md-2">
                <strong>Movie</strong>
            </div>
            <div class="col-md-2">
                <strong>Genre</strong>
            </div>
        </div>

        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-2">@Html.ActionLink(item.Name, "Details", new { id = item.ID })</div>
                <div class="col-md-2">@item.Genre.Name</div>
            </div>

        }
    }
    else
    {
        < p > No movies to display </ p >
    }
</div>