@model IList<Vidly2.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<div>
    @Html.ActionLink("Add a new movie", "AddOrEditMovie", null, new { @class = "btn btn-primary" })
    @if (Model != null && Model.Count != 0)
    {
        <div class="row">
            <div class="col-md-2">
                <strong>Movie</strong>
            </div>
            <div class="col-md-2">
                <strong>Genre</strong>
            </div>
            <div class="col-md-2 ">
                <strong>Edit</strong>
            </div>
            <div class="col-md-2 ">
                <strong>Details</strong>
            </div>
        </div>

        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-2">@item.Name</div>
                <div class="col-md-2">@item.Genre.Name</div>
                <div class="col-md-2">@Html.ActionLink("Edit", "AddOrEditMovie", new { id = item.ID })</div>
                <div class="col-md-2">@Html.ActionLink("Details", "Details", new { id = item.ID })</div>
            </div>
        }
    }
    else
    {
        <p> No movies to display </p>
    }
</div>